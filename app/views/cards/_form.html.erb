<%= simple_form_for [current_project, @board, @list, @card],
  html: {
    data: {
      behavior: ('local-auto-save' if @card.new_record?),
      auto_save_key: ("project-#{current_project.id}-board-#{@board.id}-list-#{@list.id}-card#{"-#{params[:template]}" if params[:template]}" if @card.new_record?)
    }
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name, required: false %>
  <%= f.input :due_date, html5: true, include_blank: true %>

  <%=
    f.input :description,
      input_html: {
        class: 'textile h-100',
        data: textile_default_data.merge(
          allow_dropdown: @card.new_record?,
          behavior: 'rich-toolbar',
          'rich-toolbar': 'block-code bold field italic link list-ol list-ul table'
        ),
        label: false,
        rows: 20
      }
  %>

  <%=
    f.association(
      :assignees,
      collection: current_project.authors.sort_by(&:name),
      label_method: lambda do |user|
        avatar_image(user, include_name: true, size: 30)
      end,
      value_method: :id,
      as: :check_boxes,
      item_wrapper_tag: :div,
      boolean_style: :inline
    )
  %>

  <div class="form-actions">
    <%= f.button :submit, nil, class: 'btn btn-primary' %> or
    <% if @card.persisted? %>
      <%= link_to 'Cancel', [current_project, @board, @list, @card], class: 'cancel-link' %>
    <% else %>
      <%=
        link_to 'Cancel',
        [current_project, @board],
        class: 'cancel-link',
        data: {
          behavior: 'clear-local-auto-save'
        }
      %>
    <% end %>
  </div>
<% end %>
