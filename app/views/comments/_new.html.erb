<%= form_with model: [current_project, Comment.new(commentable: commentable)], data: { behavior: 'add-comment local-auto-save', auto_save_key: "comment-#{request.path}" }, class: 'mt-3' do |f| %>
  <div class="row m-0">
    <%= f.label "Add a comment" %>
  </div>
  <div class="row m-0 flex-nowrap">
  <%= avatar_image(current_user, size: 30) %>
  <%= f.text_area :content,
                  placeholder: 'Write your comment...',
                  rows: 5,
                  required: 'required',
                  class: 'form-control',
                  data: {
                    behavior: 'mentionable rich-toolbar',
                    'rich-toolbar': 'block-code bold italic link list-ol list-ul table'
                  } %>

  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>
  </div>
  <%= f.submit "Add comment", class: "btn btn-primary mt-2" %>
<% end %>
