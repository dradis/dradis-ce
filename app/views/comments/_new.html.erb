<%= form_with model: [current_project, Comment.new(commentable: @commentable)],
  class: 'mt-3',
  data: {
    behavior: 'add-comment local-auto-save',
    auto_save_key: "comment-#{request.path}"
  } do |f| %>

  <div class="row m-0">
    <%= f.label :content, "Add a comment" %>
  </div>
  <div class="row m-0 flex-nowrap">
  <%= avatar_image(current_user, size: 30) %>
  <%= f.text_area :content,
                  placeholder: 'Write your comment...',
                  rows: 5,
                  required: 'required',
                  class: 'form-control',
                  data: {
                    behavior: 'mentionable rich-toolbar drop-zone',
                    'rich-toolbar': 'block-code bold image italic link list-ol list-ul table',
                    'rich-toolbar-uploader': '[data-behavior~=jquery-upload]'
                  } %>

  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>
  </div>
  <%= f.submit "Add comment", class: "btn btn-primary mt-2" %>
<% end %>
