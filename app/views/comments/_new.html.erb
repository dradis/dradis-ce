<%= form_for [@project, Comment.new(commentable: commentable)], data: { remote: true } do |f| %>
  <%= f.label "Add a comment" %>
  <%= avatar_image(current_user, size: 30) %>
  <%= f.text_area :content,
                  placeholder: 'Write your comment...',
                  rows: 5,
                  required: 'required' %>

  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>

  <%= f.submit "Add comment", id: 'comment_form_submit_btn', class: "btn btn-primary" %>
<% end %>
