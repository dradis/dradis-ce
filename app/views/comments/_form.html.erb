<%= form_with model: [current_project, @comment],
  html: {
    data: {
      behavior: 'local-auto-save',
      auto_save_key: "comment-#{@comment.id}"
    }
  } do |f| %>

  <%= f.text_area :content,
                  value: @comment.content,
                  rows: 5,
                  required: 'required',
                  class: 'form-control mt-3',
                  data: {
                    behavior: 'mentionable rich-toolbar',
                    'rich-toolbar': 'block-code bold italic link list-ol list-ul table'
                  } %>
    <%= f.submit "Update comment", class: "btn btn-primary mt-2 ml-0", style: 'vertical-align: baseline;' %> or
    <%= link_to 'Cancel',
                'javascript:void(0)',
                class: 'cancel-link',
                data: {
                  behavior: 'cancel-comment clear-local-auto-save'
                } %>
<% end %>
