<%= form_for [@project, comment], data: { remote: true } do |f| %>
  <%= f.text_area :content,
                  value: comment.content,
                  rows: 5,
                  required: 'required' %>
  <%= f.submit "Update comment", class: "btn btn-primary" %> or
  <%= link_to 'Cancel',
              'javascript:void(0)',
              class: 'cancel-link',
              data: {toggle_comment: "off"} %>
<% end %>
