<% commentable = comment.commentable %>
<% if commentable.title? %>
  commented on the
  <%= link_to commentable.title, presenter.comment_path(anchor: true) %>
  <%= comment.commentable.class.commentable_display_name %>.
<% else %>
  commented on
  <%= link_to "#{comment.commentable_type.demodulize} ##{commentable.id}", presenter.comment_path(anchor: true) %>.
<% end %>
