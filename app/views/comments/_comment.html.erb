<%= div_for comment, data: { user_id: comment.user.id } do %>
  <div class="body">
    <%= link_to(avatar_image(comment.user, size: 30), "##{dom_id(comment)}") %>

    <div>
      <% if comment.user %>
        <strong><%= comment.user.email %></strong>
      <% else %>
        a user who has since been deleted
      <% end %>

      <span class="time"><%= local_time_ago(comment.created_at) %></span>

      <div class="actions">
        <%= link_to 'javascript:void(0)',
                    class: 'edit_comment_link',
                    data: {toggle_comment: "on"} do %>
          <i class="fa fa-pencil"></i> Edit
        <% end %>
        <%= link_to [@project, comment],
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'delete_comment_link text-error' do %>
          <i class="fa fa-trash"></i> Delete
        <% end %>
      </div>
    </div>

    <div class="content">
      <%= comment.content %>
    </div>

    <%= render 'comments/edit', comment: comment %>
  </div>
<% end %>
