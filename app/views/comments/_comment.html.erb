<div class="comment-wrapper" data-behavior="comment" data-id="<%= comment.id %>">
  <%= div_for comment, data: { author_id: comment.user_id } do %>
    <div class="body">
      <div class="d-flex">
        <%= avatar_image(comment.user, size: 35) %>
        <div class="w-100">
          <div class="d-flex justify-content-between">
            <span class="user">
              <% if comment.user %>
                <%= comment.user.name %>
              <% else %>
                Missing User
              <% end %>
            </span>

            <div class="actions">
              <%= link_to edit_comment_path(comment), remote: true, data: { action: 'edit' } do %>
                <i class="fa fa-pencil"></i> Edit
              <% end %>
              <%= link_to [comment],
                          method: :delete,
                          data: { confirm: "Are you sure?\n\nProceeding will delete this comment, making it no longer visible to anyone." },
                          remote: true,
                          class: 'text-error' do %>
                <i class="fa fa-trash"></i> Delete
              <% end %>
            </div>
          </div>

          <span class="time">
            <%= link_to local_time_ago(comment.created_at), "##{dom_id(comment)}", data: { turbolinks: false } %>
          </span>
        </div>
      </div>

      <div class="content content-textile">
        <%= comment_formatter(comment.content) %>
      </div>
    </div>
  <% end %>
</div>
