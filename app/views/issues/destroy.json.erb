<%# self.formats += ['html'] %>
<% if @issue.destroyed? %>
{
  "success": true,
       "id": <%= @issue.id %>,
      "msg": "Issue deleted",
   "issues": "<%= j render('issues/table.html.erb', issues: @issues) %>"
}
<% else %>
{
  "success": false,
      "msg": "<%= j "Error while deleting issue: #{@issue.errors}" %>",
   "errors": <%= j @issue.errors.to_json %>,
   "issues": "<%=j render('issues/table.html.erb', issues: @issues) %>"
  }
<% end %>