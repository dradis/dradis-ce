<% if issue %>
  <% if issue.title? %>
    <%= presenter.verb %> the <%= link_to issue.title, [@project, issue] %> issue.
  <% else %>
    <%= presenter.verb %> <%= link_to "Issue ##{issue.id}", [@project, issue] %>.
  <% end %>
<% else %>
  <% if activity.action == 'destroy' %>
    deleted an issue.
  <% else %>
    <%= presenter.verb %> an issue which has since been deleted.
  <% end %>
<% end %>
