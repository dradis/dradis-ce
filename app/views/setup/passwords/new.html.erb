<%= flash_messages %>

<%= render partial: 'setup/progress' %>

<%= form_tag( setup_password_path, { class: 'form-horizontal' } ) do -%>
  <h1>Let's start with setting your shared password</h1>
  <p class="small">This shared password will be used by every user accessing this Dradis server.</p>

  <div class="form-group">
    <%= label_tag :password, nil, class: 'col-form-label' %>
    <%= password_field_tag :password, nil, class: 'form-control', autofocus: true, autocomplete: 'off' %>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, nil, class: 'col-form-label' %>
    <%= password_field_tag :password_confirmation, nil, class: 'form-control', autocomplete: 'off' %>
  </div>

  <%= button_tag :submit, class: 'btn btn-primary' do %>
    Next <i class="fa fa-long-arrow-right"></i>
  <% end %>
<% end %>
