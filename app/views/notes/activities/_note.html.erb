<% if note %>
  <% node    = note.node %>
  <% project = node.project %>
  <% if note.title? %>
    <%= presenter.verb %> the <%= link_to note.title, [project, node, note] %> note at <%= link_to node.label, [project, node] %>.
  <% else %>
    <%= presenter.verb %> <%= link_to "Note ##{note.id}", [project, node, note] %> at <%= link_to node.label, [project, node] %>.
  <% end %>
<% else %>
  <% if activity.action == 'destroy' %>
    deleted a note.
  <% else %>
    <%= presenter.verb %> a note which has since been deleted.
  <% end %>
<% end %>
