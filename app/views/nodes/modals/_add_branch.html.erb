<div id="modal_add_branch_node" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= simple_form_for Node.new, url: main_app.nodes_path, html: {class: 'form-horizontal'} do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add top-level node</h3>
  </div>
  <div class="modal-body">
    <p>You are adding a new top-level node.</p>
    <%= f.input :label, placheholder: 'Node name', required: true %>
    <%= f.input :type_id, collection: [["Default", Node::Types::DEFAULT], ["Host", Node::Types::HOST]], include_blank: false %>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary">Add</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
  <% end %>
</div>