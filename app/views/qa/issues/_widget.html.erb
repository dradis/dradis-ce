<div class="content-container ml-xxl-3">
  <h4 class="header-underline">QA</h4>
  <p class="font-weight-bold mb-2">Update State</p>
  <div class="btn-group">
    <%= button_to 'Draft', project_qa_issues_path(current_project, ids: @issue, state: 'draft'), method: :put, class: 'btn btn-secondary text-dark rounded-left' %>
    <div class="btn-placeholder rounded-0">Ready for review</div>
    <%= button_to 'Published', project_qa_issues_path(current_project, ids: @issue, state: 'published'), method: :put, class: 'btn btn-secondary text-dark rounded-right' %>
  </div>
</div>
