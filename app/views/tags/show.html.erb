<nav data-behavior="breadcrumbs-nav">
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to project_tags_path(@project) do %>
        <i class="fa fa-arrow-left"></i>
        All tags
      <% end %>
    </li>
  </ul>
</nav>
<div class="card">
  <div class="card-header">
    <h3 style="color:<%=@tag.color%>;"><%= @tag.display_name %></h3>
  </div>
  <div class="card-body">
   

    <%= link_to edit_project_tag_path(id: @tag.id), class: "col" do %>
      <i class="fa fa-pencil fa-fw"></i>
      Edit Tag
    <% end %>
  <div class="dropdown dots-dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-h fa-lg"></i><span class="sr-only">Toggle menu</span></a>
    <div class="dropdown-menu">
      <%= link_to(
          project_tag_path(id: @tag.id), 
          class: "col",
          data: { confirm: "Are you sure?\n\nProceeding will delete this tag." },
          method: :delete
        ) do %>
        <i class="fa fa-trash fa-fw"></i> Delete
      <% end %>
    </div>
  </div>
  </div>
</div>
