<div
  id="modal-tag-new"
  class="modal fade boards-modal mt-5"
  tabindex="-1"
  role="dialog"
  aria-labelledby="modal-board-header"
  aria-hidden="true"
  data-backdrop="false"
>
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-board-header">Add new tag</h5>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <i class="fa fa-times"></i><span class="sr-only">Close modal</span>
          </button>
        </div>

        <div class="modal-body">
          <%= form_for :tag, url: project_tags_path  do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name  %>
            </div>
            <div class="form-group mb-0 pt-1">
              <%= submit_tag 'Create', class: 'btn btn-primary mt-4', data: { behavior: 'animate-click' } %>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
    </div>
  </div>
</div>
