<% content_for :title, 'Tags' %>

<!-- Main content -->
<div id="tag-viewer">

  <div class="inner note-text-inner">
    <h3>
      <%= link_to new_project_tag_path(current_project), class: 'btn btn-primary' do %>
        <i class="fa fa-plus"></i> Add a tag
      <% end %>
    </h3>

    <% if @tags.any? %>
      <div id="tags-table"
           data-storage-key="project.ce.tag_columns"
           data-close-console-url="<%= project_tags_path(current_project) %>">
        <%= render 'table', tags: @tags %>
      </div>
    <% else %>
      <%= render 'empty' %>
    <% end %>
  </div>
</div>

<%= render 'console/console' %>
