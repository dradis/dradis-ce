<% content_for :title, 'Methodologies' %>

<%= render 'poller_alerts' unless  request.xhr? %>

<div class="content-container pb-3 mt-3">
  <% if @boards.any? %>
    <ul class="board-list">
      <% @boards.each do |board| %>
        <% content_for :board_rename_modal do %>
          <%= render partial: 'boards/modals/board_rename_form', locals: { board: board } %>
        <% end %>

        <li class="board-list-item" data-board-id="<%= board.id %>">
          <%= link_to main_app.project_board_path(current_project, board), class: 'board-tile' do %>
            <span class="board-tile-details">
              <span class="board-tile-details-name"><%= board.name %></span>
            </span>
          <% end %>

          <div class="board-actions">
            <%=
              link_to(
                "#modal-board-edit-#{board.id}",
                data: { behavior: 'board-modal' }
              ) do
            %>
              <i class="fa fa-pencil"></i> Edit
            <% end %>
            <%=
              link_to(
                [current_project, board],
                class: 'text-error-hover',
                data: { confirm: "Are you sure?\n\nProceeding will delete this methodology from the project, as well as with any associated lists and tasks." },
                method: 'delete'
              ) do %>
              <i class="fa fa-trash"></i> Delete
            <% end %>
          </div>
        </li>
      <% end %>

      <li class="board-list-item">
        <a
          class="board-tile board-new"
          data-behavior="board-modal"
          data-toggle="modal"
          href="#modal-board-new"
        >
          Create new methodology...
        </a>
      </li>
    </ul>
  <% else %>
    <div class="empty-state">
      <div class="empty-state-icon">
        <%= image_tag "icons/#{rand(9)}.svg" %>
      </div>
      <div class="empty-state-body">
        <div class="container">
          <h4 class="empty-state-title">You don't have any Methodologies yet</h4>
          <p class="text-center">Use methodologies to ensure consistency across all of your projects. In a nutshell, methodologies are checklists of tasks you need to perform at some point during the test.</p>
          <div class="empty-state-actions">
            <div class="d-flex align-items-center justify-content-around flex-wrap w-100">
              <%= link_to '#modal-board-new', class: 'btn btn-primary btn-lg mb-2 px-5', data: { behavior: 'board-modal', toggle: 'modal' } do %>
                <i class="fa fa-plus"> </i> Add Methodology
              <% end %>
            </div>
            <a href="https://dradisframework.com/support/guides/projects/methodologies.html" class="small mt-2" target="_blank">More about methodologies</a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
